{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "types": ["node"],
    "rootDir": "src",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2021"
  },
  "include": [
    "src/**/*.ts",
    "../../libs/api/firestore/src/**/*.ts",
    "../../libs/api/storage/src/**/*.ts",
    "../../libs/api/gmail/src/**/*.ts"
  ],
  "exclude": [
    "out-tsc",
    "dist",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs"
  ],
  "references": [
    {
      "path": "../../libs/api/storage/tsconfig.lib.json"
    },
    {
      "path": "../../libs/api/firestore/tsconfig.lib.json"
    },
    {
      "path": "../../libs/api/gmail/tsconfig.lib.json"
    },
    {
      "path": "../../libs/api/auth/tsconfig.lib.json"
    }
  ]
}
